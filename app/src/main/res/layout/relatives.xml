<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/relative_layout"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible"
        tools:background="@android:color/holo_blue_bright"
        tools:text="Relative Layout"
        tools:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6"
        android:contentDescription="@drawable/museum"
        app:srcCompat="@drawable/museum" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:text="National Museum "
        android:textAlignment="center"
        android:textSize="28dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="164dp"
        android:paddingLeft="30dp"
        android:text="Location: Padre Burgos Ave Ermita, Manila, Luzon 2004 Philippines
" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="148dp"
        android:paddingLeft="30dp"
        android:text="Distance from UST: 3.6 km from University of Santo Tomas" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="55dp"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:text="Back" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button5"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:text="Next" />


</RelativeLayout>