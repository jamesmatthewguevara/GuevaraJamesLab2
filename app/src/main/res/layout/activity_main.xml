<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/linear_layout"
            android:textColor="@android:color/black"
            tools:background="@android:color/holo_blue_bright"
            tools:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:contentDescription="@drawable/museum"
            android:padding="5dp"
            app:srcCompat="@drawable/museum"
            tools:paddingTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/national_museum"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="visible"
            tools:text="National Museum"
            tools:textColorHighlight="@android:color/background_dark"
            tools:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_padre_burgos_ave_ermita_manila_luzon_2004_philippines"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="visible"
            tools:text="Location: Padre Burgos Ave Ermita, Manila, Luzon 2004 Philippines "
            tools:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distance_from_ust_3_6_km_from_university_of_santo_tomas"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="visible"
            tools:text="Distance from UST: 3.6 km from University of Santo Tomas  "
            tools:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Back"
            android:layout_marginStart="50dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="NEXT"
            android:layout_marginStart="100dp" />


    </LinearLayout>

</LinearLayout>